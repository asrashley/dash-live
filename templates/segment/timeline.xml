{% set segTimeline = rep.generateSegmentTimeline() %}
<SegmentTimeline>
  {%- for seg in segTimeline %}
    <S d="{{seg.duration}}"
      {%- if seg.repeat > 0 %} r="{{seg.repeat}}" {%- endif %}
      {%- if seg.start != None %} t="{{seg.start}}" {%- endif %}
    />
  {%- endfor %}
</SegmentTimeline>  
