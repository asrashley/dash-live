{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "outDir": "./templates/dist/",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "module": "ES2022",
    "moduleResolution": "node",
    "paths": {
      "@dashlive/*": ["./frontend/@types/@dashlive/*"]
    },
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "ES2023",
    "lib": ["es2024.promise"]
  },
  "include": [
    "./frontend/src/**/*.ts",
    "./frontend/src/**/*.tsx",
    "./frontend/@types/@dashlive/*.d.ts"
  ]
}
