{
  "name": "dash-live",
  "version": "3.6.0",
  "description": "A simulated MPEG DASH service",
  "license": "Apache-2.0",
  "repository": "github:asrashley/dash-live",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "build": "webpack --mode production --config frontend/config/webpack.prod.js",
    "coverage": "vitest run --coverage",
    "legacy-css": "lessc -x static/css/legacy.less static/css/legacy.css",
    "video-css": "lessc -x static/css/legacy.less static/css/legacy.css",
    "lint": "eslint frontend/src/**/*.{ts,tsx}",
    "lint:compat": "jshint static/js/legacy static/js/compat",
    "main-css": "lessc -x frontend/src/styles/main.less static/css/main.css",
    "all-css": "npm run legacy-css && npm run video-css && npm run main-css",
    "postinstall": "patch-package",
    "start": "webpack server --host 0.0.0.0 --port 8765 --watch-files src --color",
    "test": "vitest"
  },
  "devDependencies": {
    "@eslint/compat": "~1.1.1",
    "@fetch-mock/vitest": "^0.2.6",
    "@testing-library/preact": "^3.2.4",
    "@testing-library/user-event": "^14.5.2",
    "@types/eslint__js": "^8.42.3",
    "@vitest/coverage-v8": "^3.0.5",
    "css-loader": "^7.1.2",
    "eslint": "^8.57.1",
    "eslint-config-preact": "^1.5.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-no-barrel-files": "^1.2.0",
    "eslint-plugin-react": "^7.37.2",
    "fetch-mock": "^12.2.0",
    "git-rev-webpack-plugin": "^0.3.1",
    "handlebars-loader": "^1.7.3",
    "html-webpack-plugin": "^5.6.3",
    "jsdom": "^25.0.1",
    "jshint": "^2.13.6",
    "less": "^4.2.2",
    "less-loader": "^12.2.0",
    "mini-css-extract-plugin": "^2.9.2",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.2",
    "vitest": "^3.0.5",
    "vitest-mock-extended": "^2.0.2",
    "webpack": "^5.97.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.1"
  },
  "dependencies": {
    "@preact/signals": "^2.0.0",
    "@preact/signals-core": "^1.8.0",
    "bootstrap-icons": "^1.11.3",
    "codec-string": "github:paulhiggs/codec-string",
    "loglevel": "^1.9.2",
    "patch-package": "^8.0.0",
    "preact": "^10.25.0",
    "preact-jsx-runtime": "^1.2.0",
    "preact-lazy": "^0.0.3",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "temporal-polyfill": "^0.2.5",
    "wouter-preact": "^3.3.5"
  }
}
